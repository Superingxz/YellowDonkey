<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="38dp"
        android:layout_marginTop="34dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp"
            android:text="+86"
            android:textColor="@color/text_black"
            android:textSize="17sp" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="输入手机号"
            android:inputType="phone"
            android:textColor="@color/text_black"
            android:textSize="17sp" />

        <com.ruanjie.donkey.widget.TimerTextView
            android:id="@+id/ttvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_timer"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="7dp"
            android:textColor="@color/text_black"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="38dp"
        android:background="@color/lineColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="38dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp"
            android:text="验证码"
            android:textColor="@color/text_black"
            android:textSize="17sp" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="输入验证码"
            android:inputType="number"
            android:textColor="@color/text_black"
            android:textSize="17sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="38dp"
        android:background="@color/lineColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="38dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp"
            android:text="设置密码"
            android:textColor="@color/text_black"
            android:textSize="17sp" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etPwd1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="设置账号密码"
            android:inputType="textPassword"
            android:textColor="@color/text_black"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/llPwdEye1"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <com.noober.background.view.BLView
                android:id="@+id/vPwdEye1"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:paddingLeft="20dp"
                app:bl_selected_drawable="@mipmap/visible_icon"
                app:bl_unSelected_drawable="@mipmap/invisible_icon" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="38dp"
        android:background="@color/lineColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="38dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp"
            android:text="确认密码"
            android:textColor="@color/text_black"
            android:textSize="17sp" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etPwd2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="再次输入密码"
            android:inputType="textPassword"
            android:textColor="@color/text_black"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/llPwdEye2"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <com.noober.background.view.BLView
                android:id="@+id/vPwdEye2"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:paddingLeft="20dp"
                app:bl_selected_drawable="@mipmap/visible_icon"
                app:bl_unSelected_drawable="@mipmap/invisible_icon" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="38dp"
        android:background="@color/lineColor" />

    <TextView
        android:id="@+id/tvBind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="38dp"
        android:layout_marginTop="59dp"
        android:background="@drawable/shape_change_phone_over"
        android:gravity="center"
        android:paddingVertical="15dp"
        android:text="绑定"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="38dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/un_check"
            android:drawablePadding="5dp"
            android:text="我已阅读并同意"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProtocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《小黄驴用户协议》"
                android:textColor="@color/text_yellow"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_yellow" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>