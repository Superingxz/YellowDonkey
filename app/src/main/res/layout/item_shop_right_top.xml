<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLTextView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tvSort"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:gravity="center"
    android:maxLines="1"
    android:paddingHorizontal="5dp"
    android:paddingVertical="3dp"
    android:textSize="14sp"
    app:bl_corners_radius="6dp"
    app:bl_selected_solid_color="@color/orange"
    app:bl_selected_textColor="@color/white"
    app:bl_stroke_color="@color/gray"
    app:bl_stroke_width="1dp"
    app:bl_unSelected_solid_color="@color/white"
    app:bl_unSelected_textColor="@color/textColor" />


