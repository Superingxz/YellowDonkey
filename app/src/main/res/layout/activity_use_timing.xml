<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
<android.support.v7.widget.LinearLayoutCompat
    android:id="@+id/use_timing_layout"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_above="@id/rl_layout"
    android:orientation="vertical"
    android:background="@mipmap/yellow_round_background_icon"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@id/rl_layout"
    >
   <android.support.v7.widget.LinearLayoutCompat
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="17dp"
       android:layout_marginTop="24dp"
       android:gravity="center_vertical"
       android:orientation="horizontal"
       >
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="正在用车："
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_vehicle_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:textSize="20sp"
        />
   </android.support.v7.widget.LinearLayoutCompat>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="43dp"
        android:paddingEnd="43dp"
        android:paddingTop="28dp"
        android:paddingBottom="28dp"
        >
      <android.support.v7.widget.LinearLayoutCompat
          android:layout_width="130dp"
          android:layout_height="130dp"
          android:orientation="vertical"
          android:layout_alignParentStart="true"
          android:layout_centerVertical="true"
          android:gravity="center"
          android:background="@mipmap/black_round_background_icon"
          >
      <android.support.v7.widget.AppCompatTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="10sp"
          android:textColor="@color/white"
          android:text="剩余电量"
          />
      <android.support.v7.widget.AppCompatTextView
          android:id="@+id/tv_residual_electricity"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:textSize="18sp"
          android:textColor="@color/white"
          android:text="0%"
          />
      </android.support.v7.widget.LinearLayoutCompat>

     <android.support.v7.widget.LinearLayoutCompat
         android:layout_width="130dp"
         android:layout_height="130dp"
         android:background="@mipmap/black_round_background_icon"
         android:layout_alignParentEnd="true"
         android:layout_centerVertical="true"
         android:gravity="center"
         android:orientation="vertical"
         >

         <android.support.v7.widget.AppCompatTextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="10sp"
             android:textColor="@color/white"
             android:text="可续航量程"
             />
         <android.support.v7.widget.AppCompatTextView
             android:id="@+id/tv_range_voyage"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:textColor="@color/white"
             android:text="0km"
             />
     </android.support.v7.widget.LinearLayoutCompat>
    </RelativeLayout>

   <android.support.v7.widget.LinearLayoutCompat
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="35dp"
       android:layout_gravity="center_vertical"
       android:gravity="center"
       android:orientation="vertical"
       >
   <android.support.v7.widget.AppCompatTextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/text_black"
       android:text="行驶时间"
       android:textSize="18sp"
       />
   <android.support.v7.widget.AppCompatTextView
       android:id="@+id/tv_driving_time"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="45sp"
       android:textColor="@color/text_black"
       android:text="00:00:00"
       />
   </android.support.v7.widget.LinearLayoutCompat>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:paddingTop="45dp"
      android:paddingBottom="45dp"
      android:paddingStart="66dp"
      android:paddingEnd="50dp"
      >
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        >
     <android.support.v7.widget.AppCompatTextView
         android:id="@+id/tv_price"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/text_black"
         android:maxLines="1"
         android:textSize="16sp"
         android:text="0元"
         />
     <android.support.v7.widget.AppCompatTextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/text_black"
         android:textSize="14sp"
         android:text="当前费用"
         />
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        >
     <android.support.v7.widget.AppCompatTextView
         android:id="@+id/tv_driving_distance"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/text_black"
         android:maxLines="1"
         android:textSize="16sp"
         android:text="0公里"
         />
     <android.support.v7.widget.AppCompatTextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/text_black"
         android:textSize="14sp"
         android:text="行驶距离"
         />
    </android.support.v7.widget.LinearLayoutCompat>
  </RelativeLayout>
</android.support.v7.widget.LinearLayoutCompat>

 <RelativeLayout
    android:id="@+id/rl_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@id/tv_end_billing"
    android:layout_above="@id/tv_end_billing"
    android:paddingStart="28dp"
    android:paddingEnd="28dp"
    android:paddingTop="35dp"
    android:paddingBottom="35dp"
     >
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_vehicle_retention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingHorizontal="20dp"
        android:gravity="center"
        android:background="@drawable/shape_radius_black"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="车辆保留"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_exchange_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:background="@drawable/shape_radius_black"
        android:text="换驾车辆"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_end_use_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:background="@drawable/shape_radius_black"
        android:text="结束用车"
        />
</RelativeLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_end_billing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_centerInParent="true"
        android:textColor="@color/text_red"
        android:textSize="14sp"
        android:text="关锁后即可结束计费"
        />
</android.support.constraint.ConstraintLayout>