<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/shape_line_hor"
    android:orientation="vertical"
    android:showDividers="middle">

    <com.softgarden.baselibrary.widget.NoScrollViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvShop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/selector_shop"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center_horizontal"
            android:paddingVertical="7dp"
            android:text="商城"
            android:textColor="@drawable/selector_shop_text"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvSort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/selector_sort"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center_horizontal"
            android:paddingVertical="7dp"
            android:text="分类"
            android:textColor="@drawable/selector_shop_text"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvMy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/selector_my"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center_horizontal"
            android:paddingVertical="7dp"
            android:text="我的"
            android:textColor="@drawable/selector_shop_text"
            android:textSize="11sp" />

    </LinearLayout>

</LinearLayout>

