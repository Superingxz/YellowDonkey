<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lineColor"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="34dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="押金"
                android:textColor="@color/text_black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="（随时可退）"
                android:textColor="#FC5358"
                android:textSize="12sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/text_black"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/tvDeposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="299"
                android:textColor="@color/text_black"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lineColor"
            android:paddingHorizontal="16dp"
            android:paddingTop="36dp"
            android:paddingBottom="10dp"
            android:text="支付方式"
            android:textColor="@color/explainColor"
            android:textSize="14dp" />

        <LinearLayout
            android:id="@+id/llWechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/pay_wechat"
                android:drawablePadding="14dp"
                android:gravity="center_vertical"
                android:text="微信支付"
                android:textColor="@color/text_black"
                android:textSize="16sp" />

            <View
                android:id="@+id/vWechat"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/selector_recharge_pay" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/pay_ali"
                android:drawablePadding="14dp"
                android:gravity="center_vertical"
                android:text="支付宝支付"
                android:textColor="@color/text_black"
                android:textSize="16sp" />

            <View
                android:id="@+id/vAli"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/selector_recharge_pay" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/pay_balance"
                android:drawablePadding="14dp"
                android:gravity="center_vertical"
                android:text="我的余额"
                android:textColor="@color/text_black"
                android:textSize="16sp" />

            <View
                android:id="@+id/vBalance"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/selector_recharge_pay" />
        </LinearLayout>

        <!--<LinearLayout
            android:id="@+id/llBank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/pay_bank"
                android:drawablePadding="14dp"
                android:gravity="center_vertical"
                android:text="银联支付"
                android:textColor="@color/text_black"
                android:textSize="16sp" />

            <View
                android:id="@+id/vBank"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/selector_recharge_pay" />
        </LinearLayout>-->

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/lineColor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="20dp"
            android:text="温馨提示："
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="10dp"
            android:paddingHorizontal="16dp"
            android:text="1、退款申请会在5-7个工作日内处理完毕"
            android:textColor="@color/explainColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="38dp"
            android:layout_marginVertical="34dp"
            android:background="@drawable/shape_change_phone_over"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:text="支付押金"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
