<?xml version="1.0" encoding="utf-8"?>

<com.noober.background.view.BLLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:bl_selected_drawable="@color/white"
    app:bl_unSelected_drawable="#f5f5f5">

    <com.noober.background.view.BLView
        android:id="@+id/vSelect"
        android:layout_width="3dp"
        android:layout_height="15dp"
        android:visibility="invisible"
        app:bl_corners_radius="1024dp"
        app:bl_solid_color="@color/orange" />

    <com.noober.background.view.BLTextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingVertical="18dp"
        android:textSize="14sp"
        app:bl_selected_textColor="@color/titleColor"
        app:bl_unSelected_textColor="@color/textColor" />


</com.noober.background.view.BLLinearLayout>

