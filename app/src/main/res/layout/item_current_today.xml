<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvCarNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/today_icon"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="14dp"
        android:text="电动车编号："
        android:textColor="@color/text_black"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCarMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="14dp"
            android:text="行驶费用："
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvCarTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="14dp"
            android:text="行驶时间："
            android:textColor="@color/text_black"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvCouponMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="14dp"
        android:text="使用优惠："
        android:textColor="#FC5358"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.noober.background.view.BLTextView
            android:id="@+id/tvDetail"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="查看详情"
            android:textColor="@color/explainColor"
            android:textSize="14sp"
            app:bl_corners_radius="1024dp"
            app:bl_solid_color="#EEEEEE" />

        <com.noober.background.view.BLTextView
            android:id="@+id/tvDelete"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="删除"
            android:textColor="@color/text_black"
            android:textSize="14sp"
            app:bl_corners_radius="1024dp"
            app:bl_solid_color="@color/text_yellow" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/lineColor" />

</LinearLayout>