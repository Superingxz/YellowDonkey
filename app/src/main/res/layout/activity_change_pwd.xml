<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="15dp"
        android:paddingHorizontal="39dp"
        android:text="手机号"
        android:textColor="@color/text_black"
        android:textSize="17dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="39dp">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:ellipsize="end"
            android:hint="输入手机号"
            android:inputType="phone"
            android:maxLines="1"
            android:paddingVertical="12dp"
            android:textColor="@color/text_black"
            android:textSize="17sp" />

        <com.ruanjie.donkey.widget.TimerTextView
            android:id="@+id/ttvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_timer"
            android:gravity="center_vertical"
            android:paddingHorizontal="13dp"
            android:paddingVertical="9dp"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="39dp"
        android:background="@color/lineColor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp"
        android:paddingHorizontal="39dp"
        android:text="验证码"
        android:textColor="@color/text_black"
        android:textSize="17dp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/etCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="39dp"
        android:background="@color/transparent"
        android:ellipsize="end"
        android:hint="输入验证码"
        android:inputType="number"
        android:maxLines="1"
        android:paddingVertical="12dp"
        android:textColor="@color/text_black"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="39dp"
        android:background="@color/lineColor" />

    <TextView
        android:id="@+id/tvNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="39dp"
        android:layout_marginTop="59dp"
        android:background="@drawable/shape_change_phone_over"
        android:gravity="center"
        android:paddingVertical="15dp"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="15dp" />
</LinearLayout>

