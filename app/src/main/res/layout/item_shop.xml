<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:bl_corners_bottomLeftRadius="10dp"
    app:bl_corners_bottomRightRadius="10dp"
    app:bl_stroke_color="#aa808080"
    app:bl_stroke_width="0.5dp">

    <ImageView
        android:id="@+id/ivIamge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:textColor="@color/textColor"
        android:textSize="16sp" />

    <com.noober.background.view.BLTextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="3dp"
        android:textSize="12sp"
        app:bl_corners_radius="1024dp"
        app:bl_stroke_color="@color/gray"
        app:bl_stroke_width="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="14sp" />

    </LinearLayout>

</com.noober.background.view.BLLinearLayout>