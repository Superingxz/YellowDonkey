<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@mipmap/back_black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="商品详情"
            android:textColor="@color/titleColor"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <com.zhouwei.mzbanner.MZBannerView
        android:id="@+id/mMZBanner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:canLoop="true"
        app:indicatorPaddingLeft="10dp"
        app:open_mz_mode="false" />

    <TextView android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@color/textColor"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp">

        <TextView android:id="@+id/tvPrice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="18sp" />

        <TextView android:id="@+id/tvPrice2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:textColor="@color/gray"
            android:textSize="18sp" />

    </LinearLayout>


    <TextView android:id="@+id/tvCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@color/gray"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:text="商品详情"
        android:textColor="@color/titleColor"
        android:textSize="22sp" />

    <com.noober.background.view.BLTextView
        android:layout_width="50dp"
        android:layout_height="8dp"
        android:layout_gravity="center_horizontal"
        app:bl_corners_radius="1024dp"
        app:bl_solid_color="@color/orange" />

    <TextView android:id="@+id/tvDetail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="15dp"
        android:textColor="@color/titleColor"
        android:textSize="18sp" />

    <TextView android:id="@+id/tvExChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:gravity="center"
        android:padding="15dp"
        android:text="立即兑换"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>

